generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["groupBy"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model books {
  id           Int         @id @default(autoincrement())
  title        String?     @db.VarChar(50)
  creator      String?     @db.VarChar(50)
  publisher    String?     @db.VarChar(50)
  id_category  Int?
  isbn         String?     @db.VarChar(50)
  pages        String?     @db.VarChar(100)
  cover        String?     @db.VarChar(255)
  id_user      Int?
  descriptions String?  
  category     category?   @relation(fields: [id_category], references: [id])
  users        users?      @relation(fields: [id_user], references: [id])
  borrowing    borrowing[]
  discuss      discuss[]
  rating       rating[]
}

model users {
  id          Int           @id @default(autoincrement())
  name        String?       @db.VarChar(50)
  username    String?       @db.VarChar(50)
  email       String?       @db.VarChar(100)
  password    String?       @db.VarChar(100)
  books       books[]
  borrowing   borrowing[]
  discuss     discuss[]
  user_detail user_detail[]
}

model category {
  id            Int     @id @default(autoincrement())
  name_category String? @db.VarChar(50)
  icon          String? @db.VarChar(255)
  books         books[]
}

model borrowing {
  id            Int       @id @default(autoincrement())
  borrower_name String    @db.VarChar(50)
  book_id       Int?
  user_id       Int?
  start_date    DateTime? @db.Timestamp(6)
  end_date      DateTime? @db.Timestamp(6)
  status        String?   @db.VarChar(20)
  books         books?    @relation(fields: [book_id], references: [id])
  users         users?    @relation(fields: [user_id], references: [id])
}

model discuss {
  id      Int     @id @default(autoincrement())
  book_id Int?
  user_id Int?
  discuss String?
  books   books?  @relation(fields: [book_id], references: [id])
  users   users?  @relation(fields: [user_id], references: [id])
}

model rating {
  id      Int    @id @default(autoincrement())
  rating  Int?
  book_id Int?
  books   books? @relation(fields: [book_id], references: [id])
}

model user_detail {
  id            Int       @id @default(autoincrement())
  user_id       Int?
  ktp           String?   @db.VarChar(20)
  alamat        String?   @db.VarChar(100)
  jenis_kelamin String?   @db.VarChar(10)
  usia          Int?
  ttl           DateTime? @db.Date
  users         users?    @relation(fields: [user_id], references: [id])
}
